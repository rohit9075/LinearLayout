<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--orientation attribute is mandatory in linear layout-->

    <!--LinearLayout with orientation vertical attribute value-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c997aff1"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:inputType="text"
            android:paddingStart="@dimen/dimen_10dp"
            android:hint="@string/text_name"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:inputType="text"
            android:hint="@string/text_mobile"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:inputType="text"
            android:hint="@string/text_eamil"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <!--LinearLayout with orientation Horizontal  with layoutOut_weight attribute value -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c970e9bc"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="@string/text_name"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="@string/text_mobile"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:hint="@string/text_eamil"
            android:inputType="text"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <!--LinearLayout with orientation Horizontal  with layoutOut_weight and weightSum attribute value -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c9ec97f1"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_weight="2"
            android:inputType="text"
            android:hint="@string/text_name"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="@string/text_mob"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:layout_weight="2"
            android:inputType="text"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:hint="@string/text_eamil"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
</LinearLayout>